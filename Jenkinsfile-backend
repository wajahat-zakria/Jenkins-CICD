/**
 * Jenkins Pipeline for Backend Application (Flask)
 * 
 * This pipeline demonstrates:
 * - Multi-agent pipeline with Docker
 * - Python testing with pytest
 * - Code coverage reporting
 * - Docker image building and deployment
 */

pipeline {
    agent any  // Use default agent to avoid context issues
    
    environment {
        DOCKER_IMAGE_NAME = 'stingman007/backend-app'
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}"
        APP_NAME = 'backend-app'
        FLASK_ENV = 'production'
    }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 60, unit: 'MINUTES')
        disableConcurrentBuilds()
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out source code...'
                checkout scm
                
                script {
                    env.GIT_COMMIT_SHORT = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                    env.GIT_COMMIT_MSG = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
                }
                
                echo "Git Commit: ${env.GIT_COMMIT_SHORT}"
            }
        }
        
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root --network=host'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ“¦ Installing Python dependencies...'
                dir('backend') {
                    sh '''
                        python -m pip install --no-cache-dir --upgrade pip
                        pip install --no-cache-dir -r requirements.txt
                    '''
                }
            }
        }
        
        stage('Code Quality') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root --network=host'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ” Running code quality checks...'
                dir('backend') {
                    sh '''
                        pip install --no-cache-dir flake8
                        echo "Checking code with flake8..."
                        flake8 app.py --max-line-length=120 --statistics || true
                    '''
                }
            }
        }
        
        stage('Run Tests') {
            agent {
                docker {
                    image 'python:3.11-slim'
                    args '-u root --network=host'
                    reuseNode true
                }
            }
            steps {
                echo 'ğŸ§ª Running unit tests...'
                dir('backend') {
                    sh '''
                        pip install --no-cache-dir -r requirements.txt
                        pytest test_app.py -v --junitxml=test-results.xml || true
                    '''
                }
            }
            post {
                always {
                    dir('backend') {
                        junit allowEmptyResults: true, testResults: 'test-results.xml'
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'ğŸ³ Building Docker image...'
                dir('backend') {
                    script {
                        docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}")
                        sh "docker tag ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} ${DOCKER_IMAGE_NAME}:latest"
                    }
                }
            }
        }
        
        stage('Test Docker Image') {
            steps {
                echo 'ğŸ§ª Testing Docker image...'
                script {
                    sh """
                        docker run -d --name backend-test-${BUILD_NUMBER} -p 5001:5000 ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}
                        sleep 10
                        curl -f http://localhost:5001/api/health || exit 1
                        curl -f http://localhost:5001/api/info || exit 1
                        echo "âœ… All Docker image tests passed!"
                    """
                }
            }
            post {
                always {
                    sh "docker stop backend-test-${BUILD_NUMBER} || true"
                    sh "docker rm backend-test-${BUILD_NUMBER} || true"
                }
            }
        }
        
        stage('Push to Registry') {
            steps {
                echo 'ğŸ“¤ Pushing Docker image to registry...'
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}
                            docker push ${DOCKER_IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying backend application...'
                script {
                    sh """
                        docker stop ${APP_NAME} || true
                        docker rm ${APP_NAME} || true
                        docker run -d \
                            --name ${APP_NAME} \
                            --restart unless-stopped \
                            -p 5000:5000 \
                            -e APP_VERSION=${DOCKER_IMAGE_TAG} \
                            -e BUILD_NUMBER=${BUILD_NUMBER} \
                            ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}
                        sleep 5
                        curl -f http://localhost:5000/api/health || exit 1
                        echo "âœ… Backend deployed and healthy!"
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo 'ğŸ§¹ Pipeline cleanup...'
            sh 'docker image prune -f || true'
        }
        success {
            echo '''
            â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
            â•‘         âœ… PIPELINE SUCCESSFUL! âœ…            â•‘
            â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
            '''
        }
        failure {
            echo '''
            â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
            â•‘           âŒ PIPELINE FAILED! âŒ              â•‘
            â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
            '''
        }
    }
}
