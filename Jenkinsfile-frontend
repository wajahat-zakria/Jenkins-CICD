/**
 * Jenkins Pipeline for Frontend Application
 * 
 * This pipeline demonstrates:
 * - Multi-stage pipeline with Docker agent
 * - Build, Test, Docker Build, and Deploy stages
 * - Parallel execution where applicable
 * - Docker image building and pushing
 */

pipeline {
    agent any  // We'll specify agent per stage for multi-agent setup
    
    environment {
        // Docker Hub credentials (configure in Jenkins Credentials)
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_IMAGE_NAME = 'stingman007/frontend-app'
        DOCKER_IMAGE_TAG = "${BUILD_NUMBER}"
        APP_NAME = 'frontend-app'
    }
    
    options {
        // Pipeline options
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
    }
    
    stages {
        stage('Checkout') {
            agent any
            steps {
                echo 'üì• Checking out source code...'
                checkout scm
                
                // Store git commit info
                script {
                    env.GIT_COMMIT_SHORT = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                    env.GIT_COMMIT_MSG = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
                }
                
                echo "Git Commit: ${env.GIT_COMMIT_SHORT}"
                echo "Commit Message: ${env.GIT_COMMIT_MSG}"
            }
        }
        
        stage('Build & Validate') {
            agent {
                docker {
                    image 'node:18-alpine'
                    args '-u root'
                }
            }
            steps {
                echo 'üî® Building and validating frontend...'
                dir('frontend') {
                    // Validate HTML (basic check)
                    sh '''
                        echo "Validating HTML files..."
                        for file in *.html; do
                            if [ -f "$file" ]; then
                                echo "Found: $file"
                            fi
                        done
                    '''
                    
                    // Check CSS syntax (basic validation)
                    sh '''
                        echo "Checking CSS files..."
                        for file in *.css; do
                            if [ -f "$file" ]; then
                                echo "Found: $file"
                                # Count lines and check for basic syntax
                                wc -l "$file"
                            fi
                        done
                    '''
                    
                    // Check JavaScript (basic validation)
                    sh '''
                        echo "Checking JavaScript files..."
                        for file in *.js; do
                            if [ -f "$file" ]; then
                                echo "Found: $file"
                                wc -l "$file"
                            fi
                        done
                    '''
                }
            }
        }
        
        stage('Docker Build') {
            agent any
            steps {
                echo 'üê≥ Building Docker image...'
                dir('frontend') {
                    script {
                        // Build Docker image
                        docker.build("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}")
                        
                        // Also tag as latest
                        sh "docker tag ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG} ${DOCKER_IMAGE_NAME}:latest"
                    }
                }
            }
        }
        
        stage('Test Docker Image') {
            agent any
            steps {
                echo 'üß™ Testing Docker image...'
                script {
                    // Run container and test health endpoint
                    sh """
                        docker run -d --name frontend-test-${BUILD_NUMBER} -p 8081:80 ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}
                        sleep 5
                        
                        # Test if container is healthy
                        curl -f http://localhost:8081/health || exit 1
                        curl -f http://localhost:8081/ || exit 1
                        
                        echo "‚úÖ Docker image tests passed!"
                    """
                }
            }
            post {
                always {
                    // Cleanup test container
                    sh "docker stop frontend-test-${BUILD_NUMBER} || true"
                    sh "docker rm frontend-test-${BUILD_NUMBER} || true"
                }
            }
        }
        
        stage('Push to Registry') {
            agent any
            steps {
                echo 'üì§ Pushing Docker image to registry...'
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image("${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}").push()
                        docker.image("${DOCKER_IMAGE_NAME}:latest").push()
                    }
                }
            }
        }
        
        stage('Deploy') {
            agent any
            steps {
                echo 'üöÄ Deploying application...'
                script {
                    // Stop existing container if running
                    sh """
                        docker stop ${APP_NAME} || true
                        docker rm ${APP_NAME} || true
                    """
                    
                    // Run new container
                    sh """
                        docker run -d \
                            --name ${APP_NAME} \
                            --restart unless-stopped \
                            -p 80:80 \
                            ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_TAG}
                    """
                    
                    echo '‚úÖ Frontend deployed successfully!'
                }
            }
        }
    }
    
    post {
        always {
            echo 'üßπ Cleaning up...'
            // Clean up dangling images
            sh 'docker image prune -f || true'
        }
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
    }
}
